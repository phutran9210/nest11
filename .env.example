# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=nest_db
DB_NAME_TEST=nest_test_db

# Database Settings
DB_SYNCHRONIZE=true
DB_MIGRATIONS_RUN=false
DB_DROP_SCHEMA=false
DB_LOGGING=true
DB_ENTITIES_PATH=dist/**/*.entity{.ts,.js}
DB_MIGRATIONS_PATH=dist/migrations/*{.ts,.js}

# Database SSL (Production)
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Performance
DB_MAX_QUERY_EXECUTION_TIME=10000

# Database Connection Pool
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# Security Configuration
BCRYPT_SALT_ROUNDS=10
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8080
CORS_ALLOWED_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization,X-API-Key,X-Request-ID,X-Correlation-ID
CORS_EXPOSED_HEADERS=X-Total-Count,X-Request-ID,X-Correlation-ID
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security Configuration
SECURITY_HELMET_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_CORP=cross-origin
SECURITY_COOP=same-origin-allow-popups
SECURITY_COEP_ENABLED=false
SECURITY_OAC_ENABLED=true
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_HSTS_ENABLED=true
SECURITY_XCTO_ENABLED=true
SECURITY_XDPC_ENABLED=true
SECURITY_XDO_ENABLED=true
SECURITY_XFO=DENY
SECURITY_XPCDP_ENABLED=false
SECURITY_XPB_ENABLED=false
SECURITY_XXSS_ENABLED=true
SECURITY_TRUST_PROXY=false

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
SECURITY_RATE_LIMITING_ENABLED=true
SECURITY_RATE_LIMITING_WINDOW_MS=900000
SECURITY_RATE_LIMITING_MAX=100
SECURITY_RATE_LIMITING_SKIP_SUCCESS=false
SECURITY_RATE_LIMITING_SKIP_FAILED=false

# Logging Configuration
# LOG_LEVEL: debug, info, warn, error
LOG_LEVEL=info
# LOG_DIR: Directory where log files will be stored
LOG_DIR=logs
# ENABLE_FILE_LOGGING: true to write logs to files, false for console only
ENABLE_FILE_LOGGING=true

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME=YourAppName
MAIL_SECURE=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Figma MCP Server Configuration
FIGMA_API_TOKEN=your-figma-api-token
