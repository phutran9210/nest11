# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=nest_db
DB_NAME_TEST=nest_test_db

# Database Settings
DB_SYNCHRONIZE=true
DB_MIGRATIONS_RUN=false
DB_DROP_SCHEMA=false
DB_LOGGING=true
DB_ENTITIES_PATH=dist/**/*.entity{.ts,.js}
DB_MIGRATIONS_PATH=dist/migrations/*{.ts,.js}

# Database SSL (Production)
DB_SSL_REJECT_UNAUTHORIZED=false

# Database Performance
DB_MAX_QUERY_EXECUTION_TIME=10000

# Database Connection Pool
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# Security Configuration
BCRYPT_SALT_ROUNDS=10
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Logging Configuration
# LOG_LEVEL: debug, info, warn, error
LOG_LEVEL=info
# LOG_DIR: Directory where log files will be stored
LOG_DIR=logs
# ENABLE_FILE_LOGGING: true to write logs to files, false for console only
ENABLE_FILE_LOGGING=true
